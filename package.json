{
  "name": "@logux/backend-test",
  "version": "4.0.11",
  "description": "Test Logux Back-end Protocol implementation",
  "keywords": [
    "logux",
    "server",
    "test"
  ],
  "scripts": {
    "test": "eslint . && ./bin.js local && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/backend-test",
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": "./bin.js",
  "dependencies": {
    "@logux/core": "^0.6.2",
    "@logux/server": "^0.9.6",
    "colorette": "^1.2.1",
    "ora": "^5.1.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^41.0.2",
    "@logux/sharec-config": "^0.7.9",
    "clean-publish": "^1.1.8",
    "eslint": "^7.12.0",
    "eslint-config-standard": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.2",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.2",
    "typescript": "^4.0.3",
    "yaspeller": "^7.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint --fix"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-possible-timing-attacks": "off"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "Logux",
      "GraphQL",
      "roadmap",
      "subprotocol",
      "subprotocols",
      "js"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.7.9"
  }
}
