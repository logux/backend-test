{
  "name": "@logux/backend-test",
  "version": "4.0.11",
  "description": "Test Logux Back-end Protocol implementation",
  "keywords": [
    "logux",
    "server",
    "test"
  ],
  "scripts": {
    "test": "eslint . && ./bin.js local && yaspeller *.md"
  },
  "author": "Andrey Sitnik <andrey@sitnik.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "logux/backend-test",
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": "./bin.js",
  "dependencies": {
    "@logux/core": "^0.6.2",
    "@logux/server": "^0.9.6",
    "colorette": "^1.2.2",
    "ora": "^5.4.0"
  },
  "devDependencies": {
    "@logux/eslint-config": "^45.2.3",
    "@logux/sharec-config": "^0.10.1",
    "clean-publish": "^2.1.1",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^30.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "simple-git-hooks": "^2.3.1",
    "yaspeller": "^7.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config",
    "rules": {
      "security/detect-possible-timing-attacks": "off"
    }
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ],
    "dictionary": [
      "Versioning",
      "Logux",
      "GraphQL",
      "roadmap",
      "subprotocol",
      "subprotocols",
      "js"
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.10.1"
  }
}
